<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ticket.errors.count, 'error') %> stopped this ticket from being saved:
      </h2>

      <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :numbers, placeholder: 'Numbers',
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.date_field :game_date, placeholder: 'Game Date',
      value: Date.today, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :game_number, placeholder: 'Game Number',
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.number_field :bet_amount, placeholder: 'Bet Amount',
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.check_box :bonus %>
    <%= f.label 'Bonus?' %>
  </div>
  <div class "form-group">
    <%= f.submit "Submit", class: "btn btn-lg btn-success btn-block" %>
  </div>
<% end %>
