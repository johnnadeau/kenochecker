<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ticket.errors.count, 'error') %> stopped this ticket from being saved:
      </h2>

      <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :numbers %><br>
    <%= f.text_field :numbers %>
  </div>
  <div class="field">
    <%= f.label 'Game Date' %><br>
    <%= f.date_field :game_date %>
  </div>
  <div class="field">
    <%= f.label 'Game Number' %><br>
    <%= f.text_field :game_number %>
  </div>
  <div class="field">
    <%= f.label :bet_amount %><br>
    <%= f.number_field :bet_amount %>
  </div>
  <div class="field">
    <%= f.label :bonus %><br>
    <%= f.check_box :bonus %>
  </div>
  <div class "actions">
    <%= f.submit %>
  </div>
<% end %>
