<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@game.errors.count, 'error') %> stopped this game from being saved:
      </h2>

      <ul>
        <% @game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :game_number %><br>
    <%= f.text_field :game_number %>
  </div>
  <div class="field">
    <%= f.label :game_date %><br>
    <%= f.date_field :game_date %>
  </div>
  <div class="field">
    <%= f.label :bonus %><br>
    <%= f.text_field :bonus %>
  </div>
  <div class="field">
    <%= f.label :numbers %><br>
    <%= f.text_field :numbers %>
  </div>
  <div class "actions">
    <%= f.submit %>
  </div>
<% end %>
